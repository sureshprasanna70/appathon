<div class="row">

  <%= link_to 'New Iteration', new_project_path,:class=>"btn btn-primary pull-right" %>
</div>
<div class="row">
  <h1>Iterations</h1>
</div>      
<%if @projects.count==0%>
  <div class="warn">No iterations found</div>
<%else%>
<% @projects.each do |project| %>
  <div class="row">
    <div class="module_name"><%= project.title %></div><br>
    <div  class="module_desc"><%= project.desc.html_safe %></div>
    <br>
    <div class="col-md-4"><p><%= link_to 'Edit', edit_project_path(project),:class=>"btn btn-info",:remote=>"true" %>
    <%=link_to("User stories",project_modules_path(project.id),:class=>"btn btn-warning",:remote=>"true")%> 
    <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger",:remote=>"true" %></p></div>
  </div>
<% end %>
  <% end %>
</div>
