<%= form_for(@bug) do |f| %>
  <% if @bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
      <% @bug.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.text_area :name,:placeholder=>"Name the bug",:class=>"form-control input-md"%>
  </div>
  <div class="form-group">
    <%= f.text_area :desc,:placeholder=>"Describe it",:class=>"form-control input-md"%>
  </div>
  <div class="form-group">
    <%= f.text_field :assigned_to,:placeholder=>"Who is going to squash it?",:class=>"form-control input-md"%>
  </div>
  <div class="form-group">
      <%=f.select(:status,options_for_select(["Open","Close","Working","On hold"]))%>
  </div>
  <div class="actions">
    <button type="submit" class="btn btn-success">
        <i class="fa fa-save"></i> Save
      </button>
      <a href="/" class="btn btn-danger"><i class="fa fa-trash-o"></i> Cancel</a>`
  </div>
<% end %>
