<%= form_for(@hook) do |f| %>
  <% if @hook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hook.errors.count, "error") %> prohibited this hook from being saved:</h2>

      <ul>
      <% @hook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name,:class=>"input-md form-control",:placeholder=>"Name for the hook" %>
  </div>
  <div class="form-group">
    <%= f.text_field :token,:class=>"input-md form-control",:disabled=>"true" %>
  </div>
  <div class="form-group">
    <%= f.select(:submodule_id, Submodule.all.collect {|a| [a.name, a.id]},{},{:class=>"form-control input-md"})%>
  </div>

  <div class="form-group">
    <%= f.select( :purpose,options_for_select(["bugs","comments"]),:class=>"input-md form-control") %>
  </div>
  <div class="actions">
  <button type="submit" class="btn btn-success">
    <i class="fa fa-save"></i> Save
  </button>
  <a href="/" class="btn btn-danger"><i class="fa fa-trash-o"></i> Cancel</a>
  </div>
<% end %>
