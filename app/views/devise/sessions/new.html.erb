<div class="login">
<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true,:class=>"form-control input-md",:placeholder=>"Who are you?" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off",:class=>"form-control input-md",:placeholder=>"Whats your secret code?" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <input type="submit" value="Log in" class="btn btn-success" />
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
